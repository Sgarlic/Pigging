<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_flightinfo_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:background="@color/panelOrange"
	    android:orientation="horizontal"
	    android:paddingLeft="15dp" >

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_weight="1"
		    android:orientation="vertical" >

	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="left"
	            android:src="@drawable/planelogo" />

	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:orientation="vertical" >

	        <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_gravity="center_horizontal"
		        android:orientation="horizontal" >
	
				<TextView
				    android:id="@+id/flightinfo_from_textView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:text="东京 "
				    android:textColor="@color/white"
				    android:textSize="18sp"
				    android:typeface="serif" />
				
				<TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:text=" - "
				    android:textColor="@color/white"
				    android:textSize="15sp"
				    android:typeface="serif" />
				
				<TextView
				    android:id="@+id/flightinfo_to_textView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:text="上海"
				    android:textColor="@color/white"
				    android:textSize="18sp"
				    android:typeface="serif" />
			</LinearLayout>
	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/flightinfo_date_textView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="right"
	            android:layout_marginRight="15dp"
	            android:text="2014-06-18"
	            android:textColor="@color/white"
	            android:textSize="18sp"
	            android:typeface="serif" />

	    </LinearLayout>
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

		<ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/arrowdown_notransit" />

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_marginLeft="5dp"
		    android:orientation="vertical"
		    android:paddingBottom="5dp"
		    android:paddingTop="5dp" >

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal" >

				<ImageView
				    android:id="@+id/flightinfo_companyLogo_imageView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:src="@drawable/flightcompany_3u" />

			</LinearLayout>
	    </LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginLeft="5dp"
		    android:orientation="vertical"
		    android:paddingBottom="3dp"
		    android:paddingTop="3dp" >

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
				android:layout_weight = "1">

				<TextView
				    android:id="@+id/flightinfo_company_textView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:text="东方航空"
				    android:textColor="@color/black"
				    android:textSize="18sp"
				    android:typeface="serif" />

				<TextView
				    android:id="@+id/flightinfo_planeCode_textView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:layout_marginLeft="15dp"
				    android:text="MU5138"
				    android:textColor="@color/black"
				    android:textSize="18sp"
				    android:typeface="serif" />
				
				<LinearLayout
				    android:id="@+id/flightinfo_stopover_linearLayout"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_weight="1"
				    android:orientation="vertical" >

					<LinearLayout
					    android:layout_width="wrap_content"
					    android:layout_height="match_parent"
					    android:layout_gravity="right"
					    android:layout_weight="1"
					    android:orientation="horizontal" >

						<TextView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="center_vertical"
						    android:text="经停"
						    android:textColor="@color/black"
						    android:textSize="13sp"
						    android:typeface="serif" />
		
						<TextView
						    android:id="@+id/flightinfo_stopover_textView"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="center_vertical"
						    android:layout_marginLeft="3dp"
						    android:text="杭州"
						    android:textColor="@color/textOrange"
						    android:textSize="13sp"
						    android:typeface="serif" />
					</LinearLayout>
				</LinearLayout>

			</LinearLayout>	
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
				android:layout_weight = "1">

				<TextView
				    android:id="@+id/flightinfo_fromDateDay_textView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:text="11-11"
				    android:textColor="@color/black"
				    android:textSize="16sp"
				    android:typeface="serif" />

				<TextView
				    android:id="@+id/flightinfo_fromDateTime_textView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:layout_marginLeft="5dp"
				    android:text="07:00"
				    android:textColor="@color/black"
				    android:textSize="16sp"
				    android:textStyle="bold"
				    android:typeface="serif" />
				
				<TextView
				    android:id="@+id/flightinfo_fromTerminal_textView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:layout_marginLeft="5dp"
				    android:text="北京首都机场T2"
				    android:textColor="@color/black"
				    android:textSize="15sp"
				    android:typeface="serif" />

			</LinearLayout>
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
				android:layout_weight = "1">
				<TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:text="预计飞行时间"
				    android:textColor="@color/listviewDividerColor"
				    android:textSize="13sp"
				    android:textStyle="bold"
				    android:typeface="serif" />

				<TextView
				    android:id="@+id/flightinfo_estimateTime_textView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:text="2小时10分钟"
				    android:textColor="@color/listviewDividerColor"
				    android:textSize="13sp"
				    android:textStyle="bold"
				    android:typeface="serif" />

			</LinearLayout>
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
				android:layout_weight = "1">

				<TextView
				    android:id="@+id/flightinfo_toDateDay_textView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:text="11-11"
				    android:textColor="@color/black"
				    android:textSize="16sp"
				    android:typeface="serif" />

				<TextView
				    android:id="@+id/flightinfo_toDateTime_textView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:layout_marginLeft="5dp"
				    android:text="09:10"
				    android:textColor="@color/black"
				    android:textSize="16sp"
				    android:textStyle="bold"
				    android:typeface="serif" />
				
				<TextView
				    android:id="@+id/flightinfo_toTerminal_textView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:layout_marginLeft="5dp"
				    android:text="上海虹桥机场T2"
				    android:textColor="@color/black"
				    android:textSize="15sp"
				    android:typeface="serif" />

			</LinearLayout>
		</LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

		<LinearLayout
		    android:id="@+id/flightinfo_seatBackChangeInfo_linearLayout"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="horizontal" >

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:text="查看退改签"
			    android:textColor="@color/textBlue"
			    android:textSize="18sp"
			    android:typeface="serif" />

			<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:layout_marginLeft=" 5dp"
			    android:src="@drawable/arrow_down_blue" />

		</LinearLayout>
	</LinearLayout>
	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="20dp"
			    android:orientation="horizontal"
			    android:paddingLeft="15dp"
			    android:paddingRight="15dp" >

		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:orientation="horizontal" >

		        	<TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_vertical"
	                        android:text="机票价"
	                        android:textColor="@color/priceGray"
	                        android:textSize="16sp"
	                        android:typeface="serif" />
		        	<TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_vertical"
	                        android:text="￥"
	                        android:textColor="@color/textOrange"
	                        android:textSize="18sp"
	                        android:typeface="serif" />

		        	<TextView
		        	    android:id="@+id/orderform_ticketPrice_price_textView"
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:layout_gravity="center_vertical"
		        	    android:text="580"
		        	    android:textColor="@color/textOrange"
		        	    android:textSize="18sp"
		        	    android:typeface="serif" />

		        </LinearLayout>

		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:orientation="horizontal" >
		        	<TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_vertical"
	                        android:text="机建"
	                        android:textColor="@color/priceGray"
	                        android:textSize="16sp"
	                        android:typeface="serif" />
		        	<TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_vertical"
	                        android:text="￥"
	                        android:textColor="@color/priceGray"
	                        android:textSize="16sp"
	                        android:typeface="serif" />
		        	<TextView
	                        android:id="@+id/orderform_planeBuilding_price_textView"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_vertical"
	                        android:text="50"
	                        android:textColor="@color/priceGray"
	                        android:textSize="16sp"
	                        android:typeface="serif" />
		        </LinearLayout>

		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:orientation="horizontal" >
		        	<TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_vertical"
	                        android:text="燃油"
	                        android:textColor="@color/priceGray"
	                        android:textSize="16sp"
	                        android:typeface="serif" />
		        	<TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_vertical"
	                        android:text="￥"
	                        android:textColor="@color/priceGray"
	                        android:textSize="16sp"
	                        android:typeface="serif" />
		        	<TextView
	                        android:id="@+id/orderform_fuelOil_price_textView"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_vertical"
	                        android:text="120"
	                       android:textColor="@color/priceGray"
	                        android:textSize="16sp"
	                        android:typeface="serif" />
		        </LinearLayout>
			</LinearLayout>
</LinearLayout>