<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/orderfilter_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/orderfilter_allOrders_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:gravity="bottom"
        android:text="全部订单"
        android:textColor="@layout/selector_textview_of_orderfilter"
        android:textSize="19sp"
        android:typeface="serif" />
 
    <TextView
        android:id="@+id/orderfilter_unPaymentOrders_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="bottom"
        android:text="未支付订单"
        android:textColor="@layout/selector_textview_of_orderfilter"
        android:textSize="19sp"
        android:typeface="serif" />
 
    <TextView
        android:id="@+id/orderfilter_unTravelledOrders_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="bottom"
        android:text="未出行订单"
        android:textColor="@layout/selector_textview_of_orderfilter"
        android:textSize="19sp"
        android:typeface="serif" />
 
</LinearLayout>