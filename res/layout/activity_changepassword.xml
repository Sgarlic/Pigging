<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

		<LinearLayout
		    android:id="@+id/return_logo_linearLayout"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:orientation="horizontal" >

	        <ImageView
	            android:id="@+id/return_logo_imageView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:src="@drawable/return_1x" />
        </LinearLayout>
	    <LinearLayout
	        android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:orientation="vertical">
	        <LinearLayout
		        android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_gravity="center_horizontal"
			    android:orientation="horizontal">

		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:text="密码修改"
		            android:textColor="@color/textOrange"
		            android:textSize="20sp"
		            android:typeface="serif" />

	        </LinearLayout>
		</LinearLayout>
		<LinearLayout
		    android:id="@+id/changepassword_complete_linearLayout"
	        android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:orientation="horizontal">
	        <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_weight="1"
		        android:orientation="vertical" >
	
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:text="完成"
		            android:textColor="@color/textOrange"
		            android:textSize="19sp"
		            android:typeface="serif" />
		    </LinearLayout>
	    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/panelOrange"
        android:orientation="horizontal" >

	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp" >

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="25dp"
		    android:orientation="horizontal" >

			<TextView
			    android:layout_width="120dp"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:gravity="top"
			    android:maxLines="1"
			    android:text="当前密码"
			    android:textColor="@color/priceGray"
			    android:textSize="17sp"
			    android:typeface="serif" />

			<EditText
			    android:id="@+id/changepassword_input_currentPassword_editText"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@color/white"
			    android:ems="8"
			    android:hint="6-20位字符"
			    android:maxLines="1"
			    android:textColor="@color/black"
			    android:textColorHint="@color/listviewDividerColor"
			    android:textSize="17sp"
			    android:typeface="serif" >
			    <requestFocus />
			</EditText>
	    </LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="25dp"
		    android:orientation="horizontal" >

		    <TextView
			    android:layout_width="120dp"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:gravity="top"
			    android:maxLines="1"
			    android:text="新密码"
			    android:textColor="@color/priceGray"
			    android:textSize="17sp"
			    android:typeface="serif" />

			<EditText
			    android:id="@+id/changepassword_input_newPassword_editText"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@color/white"
			    android:ems="8"
			    android:hint="6-20位字符"
			    android:maxLines="1"
			    android:textColor="@color/black"
			    android:textColorHint="@color/listviewDividerColor"
			    android:textSize="17sp"
			    android:typeface="serif" >
			    <requestFocus />
			</EditText>
		</LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
			<TextView
			    android:layout_width="120dp"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:gravity="top"
			    android:maxLines="1"
			    android:text="确认密码"
			    android:textColor="@color/priceGray"
			    android:textSize="17sp"
			    android:typeface="serif" />

			<EditText
			    android:id="@+id/changepassword_input_confirmPassword_editText"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@color/white"
			    android:ems="8"
			    android:hint="6-20位字符"
			    android:maxLines="1"
			    android:textColor="@color/black"
			    android:textColorHint="@color/listviewDividerColor"
			    android:textSize="17sp"
			    android:typeface="serif" >
			    <requestFocus />
			</EditText>
		</LinearLayout>
		
		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginTop="15dp"
		    android:gravity="top"
		    android:text="注意：密码需要填写6-20位字符，可由英文字母、数字和符号组成，不能含空格"
		    android:textColor="@color/hintColorGray"
		    android:textSize="13sp"
		    android:typeface="serif" />

	</LinearLayout>
</LinearLayout>

