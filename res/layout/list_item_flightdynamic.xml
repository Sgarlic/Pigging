<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    <ImageView
	        android:id="@+id/listitemflightdynamic_flightstatus_imageView"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:src="@drawable/flightdynamic_status_arrive" />
	</LinearLayout>
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
		    <TextView
		        android:id="@+id/listitemflightdynamic_planeCode_textView"
		        android:layout_width="85dp"
		        android:layout_height="wrap_content"
		        android:text="FM92158"
		        android:textColor="@color/black"
		        android:textSize="18sp"
		        android:typeface="serif" />
		    <TextView
		        android:id="@+id/listitemflightdynamic_fromTerminal_textView"
		        android:layout_width="100dp"
		        android:layout_height="wrap_content"
		        android:text="首都机场T2"
		        android:textColor="@color/black"
		        android:textSize="16sp"
		        android:typeface="serif" />
		    <TextView
		        android:id="@+id/listitemflightdynamic_fromTime_textView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="07:20"
		        android:textColor="@color/black"
		        android:textSize="15sp"
		        android:typeface="serif" />
	    </LinearLayout>
	    <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
		    <TextView
		        android:id="@+id/listitemflightdynamic_flightCompany_textView"
		        android:layout_width="85dp"
		        android:layout_height="wrap_content"
		        android:text="上海航空"
		        android:textColor="@color/black"
		        android:textSize="18sp"
		        android:typeface="serif" />
		    <TextView
		        android:id="@+id/listitemflightdynamic_toTerminal_textView"
		        android:layout_width="100dp"
		        android:layout_height="wrap_content"
		        android:text="萧山机场B楼"
		        android:textColor="@color/black"
		        android:textSize="16sp"
		        android:typeface="serif" />
		    <TextView
		        android:id="@+id/listitemflightdynamic_toTime_textView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="09:30"
		        android:textColor="@color/black"
		        android:textSize="15sp"
		        android:typeface="serif" />
	    </LinearLayout>
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_gravity="right"
		    android:orientation="horizontal" >
			<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:src="@drawable/arrow_right_orange_medium" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>