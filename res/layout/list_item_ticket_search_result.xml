<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="13dp"
	    android:layout_marginRight="13dp"
	    android:orientation="horizontal" >
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_weight="9"
		    android:orientation="vertical" >
	
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_weight="1"
		        android:orientation="horizontal" >
		
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:orientation="horizontal">
		
		            <TextView
		                android:id="@+id/ticket_search_flightstarttime_textView"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|left"
		                android:text="06:35-"
		                android:textColor="@color/black"
		                android:textSize="20dp"
		                android:textStyle="bold"
		                android:typeface="serif" />
		            <TextView
		                android:id="@+id/ticket_search_flightendtime_textView"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|left"
		                android:text="08:35"
		                android:textColor="@color/black"
		                android:layout_marginRight="5dp"
		                android:textSize="15dp"
		                android:typeface="serif" />
		
		        </LinearLayout>
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:orientation="vertical">
		            <LinearLayout
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|right"
		                android:orientation="horizontal">
		                <TextView
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_gravity="bottom|right"
		                    android:text="￥"
		                    android:textColor="@color/panelOrange"
		                    android:textSize="15dp"
		                    android:typeface="serif" />
		    
		                <TextView
		                    android:id="@+id/ticket_search_flightprice_textView"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_gravity="bottom|right"
		                    android:text="2570"
		                    android:textColor="@color/panelOrange"
		                    android:textSize="18dp"
		                    android:typeface="serif" />
		            </LinearLayout>
		        </LinearLayout>
		    </LinearLayout>
	
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="3dp"
		        android:layout_weight="1"
		        android:orientation="horizontal" >
	
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:orientation="horizontal">
		
		            <TextView
		                android:id="@+id/ticket_search_fromAirport_textView"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|left"
		                android:text="首都机场"
		                android:textColor="@color/priceGray"
		                android:textSize="13dp"
		                android:textStyle="bold"
		                android:typeface="serif" />

		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|left"
		                android:layout_marginLeft="3dp"
		                android:layout_marginRight="3dp"
		                android:text="-"
		                android:textColor="@color/priceGray"
		                android:textSize="13dp"
		                android:textStyle="bold"
		                android:typeface="serif" />

					<TextView
		                android:id="@+id/ticket_search_toAirport_textView"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|left"
		                android:text="虹桥机场"
		                android:textColor="@color/priceGray"
		                android:textSize="13dp"
		                android:textStyle="bold"
		                android:typeface="serif" />
		        </LinearLayout>
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:orientation="vertical">
		            <LinearLayout
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|right"
		                android:orientation="horizontal">

		                <TextView
		                    android:id="@+id/ticket_search_flightticketleft_textView"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_gravity="bottom|right"
		                    android:text=">9"
		                    android:textColor="@color/ticketLeftColor"
		                    android:textSize="13dp"
		                    android:textStyle="bold"
		                    android:typeface="serif" />

		                <TextView
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_gravity="bottom|right"
		                    android:text="张"
		                    android:textColor="@color/black"
		                    android:textSize="13dp"
		                    android:textStyle="bold"
		                    android:typeface="serif" />

		            </LinearLayout>
		        </LinearLayout>
		    </LinearLayout>
	
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="3dp"
		        android:layout_weight="1"
		        android:orientation="horizontal" >
	
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:orientation="horizontal">

		            <TextView
		                android:id="@+id/ticket_search_airlinecompany_textView"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|left"
		                android:text="大韩航空"
		                android:textColor="@color/priceGray"
		                android:textSize="13dp"
		                android:textStyle="bold"
		                android:typeface="serif" />

		            <TextView
		                android:id="@+id/ticket_search_airlinecode_textView"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|left"
		                android:layout_marginLeft="5dp"
		                android:text="KE714"
		                android:textColor="@color/priceGray"
		                android:textSize="13dp"
		                android:textStyle="bold"
		                android:typeface="serif" />
		            
		            <TextView
		                android:id="@+id/ticket_search_planeType_textView"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|left"
		                android:layout_marginLeft="5dp"
		                android:text="320(中)"
		                android:textColor="@color/priceGray"
		                android:textSize="13dp"
		                android:textStyle="bold"
		                android:typeface="serif" />

		        </LinearLayout>
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:orientation="vertical">
		            <LinearLayout
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|right"
		                android:orientation="horizontal">

		                <TextView
		                    android:id="@+id/ticket_search_flightclass_textView"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_gravity="bottom|right"
		                    android:text="经济舱3.0折"
		                    android:textColor="@color/priceGray"
		                    android:textSize="13dp"
		                    android:textStyle="bold"
		                    android:typeface="serif" />

		            </LinearLayout>
		        </LinearLayout>
		    </LinearLayout>
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="3dp"
		        android:layout_weight="1"
		        android:orientation="horizontal" >
		    </LinearLayout>
	
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:orientation="horizontal" >
	
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:orientation="horizontal">

		        </LinearLayout>
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:orientation="vertical">
		            <LinearLayout
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|right"
		                android:orientation="horizontal">

		            </LinearLayout>
		        </LinearLayout>
		    </LinearLayout>
		    
		    <LinearLayout
		        android:id="@+id/ticket_search_moreflightclassinfo_linearLayout"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:orientation="vertical"
		        android:paddingBottom="5dp"
		        android:paddingTop="3dp" >

		        <ImageView
				    android:id="@+id/group_more_class_imageView"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_horizontal"
				    android:src="@drawable/arrow_down_orange_small" />
		    </LinearLayout>
		</LinearLayout>
	
	
		<LinearLayout
		    android:id="@+id/ticket_search_toOrder_linearLayout"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:orientation="horizontal" >
			<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:layout_marginLeft="15dp"
			    android:src="@drawable/arrow_right_orange_small" />
	
		</LinearLayout>
		
	</LinearLayout>
</LinearLayout>
