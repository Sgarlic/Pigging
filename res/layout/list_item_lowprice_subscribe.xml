<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
	android:layout_marginRight="15dp"
    android:paddingTop="5dp" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >

		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_weight="1"
		        android:orientation="horizontal" >
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:orientation="horizontal">
		
		            <TextView
		                android:id="@+id/lowpricesubscribe_flyfromto_textView"
		                android:layout_width="100dp"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|left"
		                android:text="上海 - 北京"
		                android:textColor="@color/black"
		                android:textSize="17sp"
		                android:typeface="serif" />
		            <TextView
		                android:id="@+id/lowpricesubscribe_subscribefromtodate_textView"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|left"
		                android:text="2013-12-10至2013-12-11"
		                android:textColor="@color/black"
		                android:layout_marginLeft="5dp"
		                android:textSize="13sp"
		                android:typeface="serif" />
		        </LinearLayout>
		    </LinearLayout>
	
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="3dp"
		        android:orientation="horizontal" >
	
		        <LinearLayout
		            android:layout_width="100dp"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|left"
		                android:text="原价："
		                android:textColor="@color/priceGray"
		                android:textSize="15sp"
		                android:typeface="serif" />

		            <TextView
		                android:id="@+id/lowpricesubscribe_originprice_textView"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="bottom|left"
		                android:layout_marginRight="3dp"
		                android:text="￥1130"
		                android:textColor="@color/textOrange"
		                android:textSize="15sp"
		                android:typeface="serif" />
				</LinearLayout>
				<TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="bottom|left"
	                android:text="订阅："
	                android:textColor="@color/priceGray"
	                android:textSize="15dp"
	                android:typeface="serif" />
				<TextView
	                android:id="@+id/lowpricesubscribe_subscribediscount_textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="bottom|left"
	                android:text="5折及其以下"
	                android:textColor="@color/priceGray"
	                android:textSize="15sp"
	                android:typeface="serif" />
		        </LinearLayout>
		</LinearLayout>
	
		<LinearLayout
		    android:id="@+id/lowpricesubscribe_deletesubscribe_linearLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:orientation="horizontal" >
		    <ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="right"
			    android:src="@drawable/delete_button_cross" />
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:orientation="horizontal" >

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="horizontal" >

		    <ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:src="@drawable/discount_logo" />
		</LinearLayout>

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:orientation="vertical" >

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:orientation="horizontal" >

		        <TextView
		            android:id="@+id/lowpricesubscribe_date_textView"
		            android:layout_width="100dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:text="2013-12-11"
		            android:textColor="@color/black"
		            android:textSize="17sp"
		            android:typeface="serif" />

		    </LinearLayout>
	
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="3dp"
		        android:orientation="horizontal" >
		        <TextView
		            android:id="@+id/lowpricesubscribe_price_textView"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="￥341"
		            android:textColor="@color/textOrange"
		            android:textSize="20sp"
		            android:typeface="serif" />
		        </LinearLayout>
		</LinearLayout>
	
		<LinearLayout
		    android:id="@+id/lowpricesubscribe_viewdetail_linearLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:orientation="vertical" >
		    <LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="right"
			    android:orientation="horizontal" >
			    <TextView
		            android:id="@+id/lowpricesubscribe_discount_textView"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="3.1折"
		            android:textColor="@color/textOrange"
		            android:layout_gravity="center_vertical"
		            android:textSize="20sp"
		            android:typeface="serif" />
				<ImageView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:layout_marginLeft="5dp"
				    android:src="@drawable/arrow_right_orange_medium" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
