<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal"
	    android:paddingLeft="15dp"
	    android:paddingRight="15dp" >

		<LinearLayout
		    android:id="@+id/return_logo_linearLayout"
		    android:layout_width="150dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:orientation="horizontal" >

	        <ImageView
	            android:id="@+id/return_logo_imageView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:src="@drawable/arrow_left_returntoprepage" />
        </LinearLayout>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="vertical" >

	        <LinearLayout
		        android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_gravity="center_horizontal"
			    android:orientation="horizontal">
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:text="订单详情"
		            android:textColor="@color/textOrange"
		            android:textSize="20dp"
		            android:typeface="serif" />
	        </LinearLayout>
		</LinearLayout>

		<LinearLayout
		    android:layout_width="150dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:orientation="horizontal" >

	    </LinearLayout>
    </LinearLayout>
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:background="@color/panelOrange"
	    android:orientation="horizontal">
	</LinearLayout>

	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="30"
	    android:scrollbars="none" >

		<LinearLayout
		    android:id="@+id/scrollView_linearLayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="20dp"
	            android:orientation="horizontal"
	            android:paddingLeft="10dp"
			    android:paddingRight="10dp" 
	            android:paddingTop="15dp" >

		        <ImageView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:src="@drawable/orderdetailinfo_orange" />

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dp"
		            android:orientation="vertical" >

					<TextView
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="top"
					    android:gravity="top"
					    android:text="订单详情 "
					    android:textColor="@color/black"
					    android:textSize="18sp"
					    android:typeface="serif" />

					<LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dp"
					    android:orientation="horizontal" >

			            <TextView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="top"
						    android:gravity="top"
						    android:text="订单状态 "
						    android:textColor="@color/priceGray"
						    android:textSize="18sp"
						    android:typeface="serif" />

			            <TextView
			                android:id="@+id/orderdetail_orderStatus_textView"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_gravity="top"
			                android:layout_marginLeft="15dp"
			                android:gravity="top"
			                android:text="确认中 "
			                android:textColor="@color/black"
			                android:textSize="18sp"
			                android:typeface="serif" />

		            </LinearLayout>
		            <LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dp"
					    android:orientation="horizontal" >

			            <TextView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="top"
						    android:gravity="top"
						    android:text="订单编号 "
						    android:textColor="@color/priceGray"
						    android:textSize="18sp"
						    android:typeface="serif" />

			            <TextView
			                android:id="@+id/orderdetail_orderID_textView"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_gravity="top"
			                android:layout_marginLeft="15dp"
			                android:gravity="top"
			                android:text="6789380508 "
			                android:textColor="@color/black"
			                android:textSize="18sp"
			                android:typeface="serif" />

		            </LinearLayout>
		            <LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dp"
					    android:orientation="horizontal" >

			            <TextView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="top"
						    android:gravity="top"
						    android:text="预定日期 "
						    android:textColor="@color/priceGray"
						    android:textSize="18sp"
						    android:typeface="serif" />

			            <TextView
			                android:id="@+id/orderdetail_orderCreatedDate_textView"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_gravity="top"
			                android:layout_marginLeft="15dp"
			                android:gravity="top"
			                android:text="2012-23-16 "
			                android:textColor="@color/black"
			                android:textSize="18sp"
			                android:typeface="serif" />

		            </LinearLayout>
		            <LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dp"
					    android:orientation="horizontal" >

			            <TextView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="top"
						    android:gravity="top"
						    android:text="支付方式 "
						    android:textColor="@color/priceGray"
						    android:textSize="18sp"
						    android:typeface="serif" />

			            <TextView
			                android:id="@+id/orderdetail_orderPaymentMethod_textView"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_gravity="top"
			                android:layout_marginLeft="15dp"
			                android:gravity="top"
			                android:text="移动支付宝 "
			                android:textColor="@color/black"
			                android:textSize="18sp"
			                android:typeface="serif" />

		            </LinearLayout>
		            <LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dp"
					    android:orientation="horizontal" >

			            <TextView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="top"
						    android:gravity="top"
						    android:text="返波丁币 "
						    android:textColor="@color/priceGray"
						    android:textSize="18sp"
						    android:typeface="serif" />

			            <TextView
			                android:id="@+id/orderdetail_orderReturnBodingCash_textView"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_gravity="top"
			                android:layout_marginLeft="15dp"
			                android:gravity="top"
			                android:text="￥20"
			                android:textColor="@color/black"
			                android:textSize="18sp"
			                android:typeface="serif" />

		            </LinearLayout>
			    </LinearLayout>
		    </LinearLayout>

		    <LinearLayout
		        android:id="@+id/orderdetail_notPaidWarning_linearLayout"
		        android:layout_width="match_parent"
		        android:layout_height="60dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:background="@drawable/shape_border_orange"
		        android:orientation="horizontal" >

				<TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:layout_marginLeft="5dp"
				    android:gravity="top"
				    android:text="订单尚未支付，请您尽快完成支付，否则订单会被取消。"
				    android:textColor="@color/warningTextGray"
				    android:textSize="14sp"
				    android:typeface="serif" />

		    </LinearLayout>
		    <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="20dp"
	            android:orientation="horizontal"
	            android:paddingLeft="10dp"
			    android:paddingRight="10dp" 
	            android:paddingTop="15dp" >

		        <ImageView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:src="@drawable/flightinfo_orange" />

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dp"
		            android:orientation="vertical" >

					<TextView
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="top"
					    android:gravity="top"
					    android:text="航班信息 "
					    android:textColor="@color/black"
					    android:textSize="18sp"
					    android:typeface="serif" />
					<LinearLayout
					    android:id="@+id/orderdetail_flightInfo_linearLayout"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:orientation="vertical">
			        </LinearLayout>
		            <LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dp"
					    android:orientation="horizontal" >

			            <TextView
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:layout_gravity="top"
			              android:gravity="top"
			              android:text="机票价 "
			              android:textColor="@color/priceGray"
			              android:textSize="15sp"
			              android:typeface="serif" />
			
			          <TextView
			              android:id="@+id/orderdetail_ticketPrice_textView"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:layout_gravity="top"
			              android:gravity="left"
			              android:text="￥5800"
			              android:textColor="@color/panelOrange"
			              android:textSize="15sp"
			              android:typeface="serif" />
			
			          <TextView
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:layout_gravity="top"
			              android:layout_marginLeft="3dp"
			              android:gravity="top"
			              android:text="机建 "
			              android:textColor="@color/priceGray"
			              android:textSize="15sp"
			              android:typeface="serif" />
			
			          <TextView
			              android:id="@+id/orderdetail_buildingPrice_textView"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:layout_gravity="top"
			              android:gravity="top"
			              android:text="￥50"
			              android:textColor="@color/panelOrange"
			              android:textSize="15sp"
			              android:typeface="serif" />
			
			          <TextView
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:layout_gravity="top"
			              android:layout_marginLeft="3dp"
			              android:gravity="top"
			              android:text="燃油 "
			              android:textColor="@color/priceGray"
			              android:textSize="15sp"
			              android:typeface="serif" />
			
			          <TextView
			              android:id="@+id/orderdetail_fuelPrice_textView"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:layout_gravity="top"
			              android:gravity="top"
			              android:text="￥120"
			              android:textColor="@color/panelOrange"
			              android:textSize="15sp"
			              android:typeface="serif" />
		            </LinearLayout>
			    </LinearLayout>
		    </LinearLayout>
		    <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="20dp"
	            android:orientation="horizontal"
	            android:paddingLeft="10dp"
			    android:paddingRight="10dp" 
	            android:paddingTop="15dp" >

		        <ImageView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:src="@drawable/passengerinfo_orange" />

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dp"
		            android:orientation="vertical" >

					<TextView
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="top"
					    android:gravity="top"
					    android:text="其他信息 "
					    android:textColor="@color/black"
					    android:textSize="18sp"
					    android:typeface="serif" />

					<LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dp"
					    android:orientation="horizontal" >

			            <TextView
			                android:layout_width="80dp"
			                android:layout_height="wrap_content"
			                android:layout_gravity="top"
			                android:gravity="top"
			                android:text="登机人 "
			                android:textColor="@color/priceGray"
			                android:textSize="18sp"
			                android:typeface="serif" />

						<LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:orientation="vertical" >
						    <ListView
						        android:id="@+id/orderdetail_passenger_listView"
						        android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:background="@color/white"
						        android:divider="@color/white"
						        android:scrollbars="none" />
						</LinearLayout>

		            </LinearLayout>
		            <LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dp"
					    android:orientation="horizontal" >

			            <TextView
			                android:layout_width="80dp"
			                android:layout_height="wrap_content"
			                android:layout_gravity="top"
			                android:gravity="top"
			                android:text="联系手机 "
			                android:textColor="@color/priceGray"
			                android:textSize="18sp"
			                android:typeface="serif" />

			            <TextView
			                android:id="@+id/orderdetail_contactPhoneNum_textView"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_gravity="top"
			                android:gravity="top"
			                android:text="12345678907 "
			                android:textColor="@color/textDarkGray"
			                android:textSize="18sp"
			                android:typeface="serif" />

		            </LinearLayout>
		            <LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dp"
					    android:orientation="horizontal" >

			            <TextView
			                android:layout_width="80dp"
			                android:layout_height="wrap_content"
			                android:layout_gravity="top"
			                android:gravity="top"
			                android:text="保险 "
			                android:textColor="@color/priceGray"
			                android:textSize="18sp"
			                android:typeface="serif" />
			            
			            <TextView
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_gravity="top"
			                android:gravity="top"
			                android:text="航空意外险"
			                android:textColor="@color/textDarkGray"
			                android:textSize="16sp"
			                android:typeface="serif" />

			            <TextView
			                android:id="@+id/orderdetail_insuranceAmount_textView"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_gravity="top"
			                android:layout_marginLeft="5dp"
			                android:gravity="top"
			                android:text="1份"
			                android:textColor="@color/textDarkGray"
			                android:textSize="16sp"
			                android:typeface="serif" />
			            
			             <TextView
			                 android:id="@+id/orderdetail_insuranceTotal_textView"
			                 android:layout_width="wrap_content"
			                 android:layout_height="wrap_content"
			                 android:layout_gravity="top"
			                 android:layout_marginLeft="5dp"
			                 android:gravity="top"
			                 android:text="共300元"
			                 android:textColor="@color/textDarkGray"
			                 android:textSize="16sp"
			                 android:typeface="serif" />

		            </LinearLayout>
		            <LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="10dp"
					    android:orientation="horizontal" >

			            <TextView
			                android:layout_width="80dp"
			                android:layout_height="wrap_content"
			                android:layout_gravity="top"
			                android:gravity="top"
			                android:text="配送 "
			                android:textColor="@color/priceGray"
			                android:textSize="18sp"
			                android:typeface="serif" />

			            <TextView
			                android:id="@+id/orderdetail_deliveryMethod_textView"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_gravity="top"
			                android:gravity="top"
			                android:text="不需要报销凭证"
			                android:textColor="@color/textDarkGray"
			                android:textSize="18sp"
			                android:typeface="serif" />
		            </LinearLayout>
			    </LinearLayout>
		    </LinearLayout>

		    <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="20dp"
	            android:orientation="horizontal"
	            android:paddingLeft="10dp"
			    android:paddingRight="10dp" 
	            android:paddingTop="15dp" >

		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="top"
		            android:gravity="top"
		            android:text="如对订单有任何疑问，请"
		            android:textColor="@color/callCustomServiceGray"
		            android:textSize="14sp"
		            android:typeface="serif" />

		        <TextView
		            android:id="@+id/orderdetail_contactCustomService_textView"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="top"
		            android:background="@color/callCustomServiceBgGray"
		            android:gravity="top"
		            android:text="拨打波丁客服咨询"
		            android:textColor="@color/white"
		            android:textSize="15sp"
		            android:textStyle="bold"
		            android:typeface="serif" />

		    </LinearLayout>
		</LinearLayout>
	</ScrollView>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_weight="0"
	    android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/panelBlue"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:text="订单总额 : ￥"
			    android:textColor="@color/white"
			    android:textSize="19sp"
			    android:textStyle="bold"
			    android:typeface="serif" />

			<TextView
			    android:id="@+id/orderdetail_totalPrice_textView"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:text="0"
			    android:textColor="@color/white"
			    android:textSize="19sp"
			    android:textStyle="bold"
			    android:typeface="serif" />

	    </LinearLayout>

        <LinearLayout
            android:id="@+id/orderdetail_confirmPay_linearLayout"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/textBlue"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

			<LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_horizontal"
	            android:orientation="horizontal">

				<TextView
				    android:id="@+id/orderdetail_paymentButton_textView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:text="确认支付"
				    android:textColor="@color/white"
				    android:textSize="19sp"
				    android:textStyle="bold"
				    android:typeface="serif" />

			</LinearLayout>
	    </LinearLayout>
    </LinearLayout>
</LinearLayout>

