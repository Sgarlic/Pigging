<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame" >  

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_weight="4"
	    android:orientation="horizontal" >

		<LinearLayout
		    android:id="@+id/return_logo_linearLayout"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:orientation="horizontal" >

	        <ImageView
	            android:id="@+id/return_logo_imageView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="15dp"
	            android:layout_gravity="center_vertical"
	            android:src="@drawable/return_1x" />
        </LinearLayout>
	    <LinearLayout
	        android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:orientation="vertical">
	        <LinearLayout
		        android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_gravity="center_horizontal"
			    android:orientation="horizontal">
		        <TextView
		            android:id="@+id/city_select_title_textView"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:text="出发城市"
		            android:textColor="@color/textOrange"
		            android:textColorHint="@color/white"
		            android:textSize="20dp"
		            android:typeface="serif" />
	        </LinearLayout>
		</LinearLayout>
		<LinearLayout
	        android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:orientation="horizontal">
	    </LinearLayout>
    </LinearLayout>
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/panelOrange"
	    android:orientation="horizontal">
	</LinearLayout>

    <LinearLayout
        android:id="@+id/from_date_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_weight="11"
        android:orientation="vertical" >

        <RelativeLayout
		    android:orientation="vertical"  
		    android:layout_width="fill_parent"  
		    android:layout_height="fill_parent" > 
		     
		    <ListView
		        android:id="@+id/city_select_listView"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/white"
		        android:cacheColorHint="@android:color/white"
		        android:divider="@color/white"
		        android:scrollbars="none" />
		
		    <com.boding.view.listview.CitySelectLetterListView
		        android:id="@+id/city_select_letter_listView"
		        android:layout_width="30dip"
		        android:layout_height="fill_parent"
		        android:layout_alignParentRight="true"
		        android:background="@color/white" />
		
		</RelativeLayout> 

    </LinearLayout>
</LinearLayout>