<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dp"
	    android:orientation="vertical" >

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="horizontal">

			<TextView
			    android:id="@+id/commoninfom_passenger_name_textView"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="李大嘴 "
			    android:textColor="@color/black"
			    android:textSize="17sp"
			    android:typeface="serif" />

		</LinearLayout>
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="horizontal">

			<TextView
			    android:id="@+id/commoninfom_passenger_idType_textView"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="身份证 "
			    android:textColor="@color/priceGray"
			    android:textSize="17sp"
			    android:typeface="serif" />

		    <TextView
		        android:id="@+id/commoninfom_passenger_idnumber_textView"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:text="365245896574123520 "
		        android:textColor="@color/priceGray"
		        android:textSize="17sp"
		        android:typeface="serif" />

	    </LinearLayout>
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">

		<LinearLayout
		    android:id="@+id/commoninfom_passenger_edit_linearLayout"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_gravity="right"
		    android:orientation="horizontal" >
	
			<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:src="@drawable/arrow_right_orange_medium" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>