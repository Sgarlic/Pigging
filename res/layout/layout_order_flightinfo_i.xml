<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_flightinfo_i_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="MergeRootFrame" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:background="@color/panelOrange"
	    android:orientation="horizontal"
	    android:paddingLeft="15dp" >

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_weight="1"
		    android:orientation="vertical" >

	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="left"
	            android:src="@drawable/planelogo" />

	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:orientation="vertical" >

	        <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_gravity="center_horizontal"
		        android:orientation="horizontal" >
	
				<TextView
				    android:id="@+id/flightinfo_i_from_textView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:text="东京 "
				    android:textColor="@color/white"
				    android:textSize="18sp"
				    android:typeface="serif" />
				
				<TextView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:text=" - "
				    android:textColor="@color/white"
				    android:textSize="15sp"
				    android:typeface="serif" />
				
				<TextView
				    android:id="@+id/flightinfo_i_to_textView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:text="上海"
				    android:textColor="@color/white"
				    android:textSize="18sp"
				    android:typeface="serif" />
			</LinearLayout>
	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="1"
	        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/flightinfo_i_date_textView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="right"
	            android:layout_marginRight="15dp"
	            android:text="2014-06-18"
	            android:textColor="@color/white"
	            android:textSize="18sp"
	            android:typeface="serif" />

	    </LinearLayout>
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >
		<LinearLayout
            android:id="@+id/flightinfo_i_segmentinfo_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
	    </LinearLayout>
        

        

		<LinearLayout
		    android:id="@+id/flightinfo_i_toInfo_linearLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">

			<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/arrowdown_transit_bottom" />
	
			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_marginLeft="10dp"
			    android:orientation="vertical"
			    android:paddingBottom="5dp"
			    android:paddingTop="5dp" >
	
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:orientation="horizontal" >
	
					<ImageView
					    android:id="@+id/flightinfo_i_toCompanyLogo_imageView"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="top"
					    android:src="@drawable/flightcompany_3u" />
	
				</LinearLayout>
		    </LinearLayout>
	
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_marginLeft="10dp"
			    android:orientation="vertical"
			    android:paddingBottom="3dp"
			    android:paddingTop="3dp" >
	
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
					android:layout_weight = "1">
	
					<TextView
					    android:id="@+id/flightinfo_i_toCompany_textView"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="top"
					    android:text="东方航空"
					    android:textColor="@color/black"
					    android:textSize="18sp"
					    android:typeface="serif" />
	
					<TextView
					    android:id="@+id/flightinfo_i_toPlanecode_textView"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="top"
					    android:layout_marginLeft="15dp"
					    android:text="MU5138"
					    android:textColor="@color/black"
					    android:textSize="18sp"
					    android:typeface="serif" />
					
					<LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"
					    android:layout_weight="1"
					    android:orientation="vertical" >
						<LinearLayout
						    android:layout_width="wrap_content"
						    android:layout_height="match_parent"
						    android:layout_gravity="right"
						    android:layout_weight="1"
						    android:orientation="horizontal" >
	
							<TextView
							    android:id="@+id/flightinfo_i_toPlanesize_textView"
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:layout_gravity="center_vertical"
							    android:text="中机型"
							    android:textColor="@color/textBlue"
							    android:textSize="15sp"
							    android:typeface="serif" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>	
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
					android:layout_weight = "1">
					<TextView
					    android:id="@+id/flightinfo_i_toFlightclass_textView"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="top"
					    android:text="经济舱"
					    android:textColor="@color/listviewDividerColor"
					    android:textSize="13sp"
					    android:textStyle="bold"
					    android:typeface="serif" />
					<LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"
					    android:layout_weight="1"
					    android:orientation="vertical" >
						<LinearLayout
						    android:layout_width="wrap_content"
						    android:layout_height="match_parent"
						    android:layout_gravity="right"
						    android:layout_weight="1"
						    android:orientation="horizontal" >
	
							<TextView
							    android:id="@+id/flightinfo_i_toPlaneType_textView"
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:layout_gravity="center_vertical"
							    android:text="737"
							    android:textColor="@color/textBlue"
							    android:textSize="15sp"
							    android:typeface="serif" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
					android:layout_weight = "1">
					<TextView
					    android:id="@+id/flightinfo_i_departureDateDay_textView"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="top"
					    android:text="11-11"
					    android:textColor="@color/black"
					    android:textSize="18sp"
					    android:typeface="serif" />
	
					<TextView
					    android:id="@+id/flightinfo_i_departureDateTime_textView"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="top"
					    android:layout_marginLeft="15dp"
					    android:text="07:00"
					    android:textColor="@color/black"
					    android:textSize="18sp"
					    android:textStyle="bold"
					    android:typeface="serif" />
					
					<TextView
					    android:id="@+id/flightinfo_i_departureTerminal_textView"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="top"
					    android:text="首都机场T2"
					    android:layout_marginLeft="15dp"
					    android:textColor="@color/black"
					    android:textSize="16sp"
					    android:typeface="serif" />
				</LinearLayout>
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
					android:layout_weight = "1">
					<TextView
					    android:id="@+id/flightinfo_i_toDateDay_textView"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="top"
					    android:text="11-11"
					    android:textColor="@color/black"
					    android:textSize="18sp"
					    android:typeface="serif" />
	
					<TextView
					    android:id="@+id/flightinfo_i_toDateTime_textView"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="top"
					    android:layout_marginLeft="15dp"
					    android:text="09:10"
					    android:textColor="@color/black"
					    android:textSize="18sp"
					    android:textStyle="bold"
					    android:typeface="serif" />
					
					<TextView
					    android:id="@+id/flightinfo_i_toTerminal_textView"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="top"
					    android:text="虹桥机场T2"
					    android:layout_marginLeft="15dp"
					    android:textColor="@color/black"
					    android:textSize="16sp"
					    android:typeface="serif" />
				</LinearLayout>
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
					android:layout_weight = "1">
					<TextView
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="top"
					    android:text="约"
					    android:textColor="@color/listviewDividerColor"
					    android:textSize="13sp"
					    android:textStyle="bold"
					    android:typeface="serif" />
					<TextView
					    android:id="@+id/flightinfo_i_toEstimateTime_textView"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="top"
					    android:text="2小时10分钟"
					    android:textColor="@color/listviewDividerColor"
					    android:textSize="13sp"
					    android:textStyle="bold"
					    android:typeface="serif" />
				</LinearLayout>
			</LinearLayout>
	    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

		<LinearLayout
		    android:id="@+id/flightinfo_i_seatBackChangeInfo_linearLayout"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:orientation="horizontal" >

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:text="查看退改签"
			    android:textColor="@color/textBlue"
			    android:textSize="18sp"
			    android:typeface="serif" />

			<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:layout_marginLeft=" 5dp"
			    android:src="@drawable/arrow_down_blue" />

		</LinearLayout>
	</LinearLayout>
	<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="20dp"
			    android:orientation="horizontal"
			    android:paddingLeft="15dp"
			    android:paddingRight="15dp" >

		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:orientation="horizontal" >

		        	<TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_vertical"
	                        android:text="机票价"
	                        android:textColor="@color/priceGray"
	                        android:textSize="16sp"
	                        android:typeface="serif" />
		        	<TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_vertical"
	                        android:text="￥"
	                        android:textColor="@color/textOrange"
	                        android:textSize="18sp"
	                        android:typeface="serif" />

		        	<TextView
		        	    android:id="@+id/orderform_ticketPrice_price_textView"
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:layout_gravity="center_vertical"
		        	    android:text="580"
		        	    android:textColor="@color/textOrange"
		        	    android:textSize="18sp"
		        	    android:typeface="serif" />

		        </LinearLayout>
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:orientation="horizontal" >
		        	<TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_vertical"
	                        android:text="税"
	                        android:textColor="@color/priceGray"
	                        android:textSize="16sp"
	                        android:typeface="serif" />
		        	<TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_vertical"
	                        android:text="￥"
	                        android:textColor="@color/priceGray"
	                        android:textSize="16sp"
	                        android:typeface="serif" />
		        	<TextView
	                        android:id="@+id/orderform_ticketTax_price_textView"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_vertical"
	                        android:text="1446"
	                        android:textColor="@color/priceGray"
	                        android:textSize="16sp"
	                        android:typeface="serif" />
		        </LinearLayout>
			</LinearLayout>
</LinearLayout>