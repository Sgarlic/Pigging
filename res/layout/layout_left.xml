<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ticket_search_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leftpage_background"
    android:orientation="vertical"
    tools:context="com.poding.testapp.TicketSearchActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical" >
	    <LinearLayout  
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent"  
        android:gravity="bottom"
        android:orientation="horizontal"  >
		    <LinearLayout  
	        android:layout_width="fill_parent"  
	        android:layout_height="fill_parent"  
	        android:gravity="center"
	        android:layout_gravity="bottom"
	        android:orientation="horizontal"  >
			    <ImageView
			        android:id="@+id/left_page_flight_way_choose"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="bottom"
			        android:layout_marginBottom="10dp"
			        android:src="@drawable/leftpage_singleway_line" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="220dp"
	    android:orientation="vertical"
	    android:paddingLeft="15dp"
	    android:paddingRight="15dp" >

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_gravity="center"
	        android:background="@color/panelBackColor"
	        android:orientation="vertical" >

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_weight="1"
		        android:orientation="vertical" >
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:layout_weight="4"
					android:orientation="horizontal" >
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_gravity="bottom"
						android:layout_weight="1"
						android:orientation="horizontal" >
						<ImageView
				    		android:id="@+id/leftpage_fly_from_logo_imageView"
				    		android:layout_width="wrap_content"
				    		android:layout_height="wrap_content"
				    		android:layout_gravity="center_vertical"
				    		android:layout_weight="1"
				    		android:src="@drawable/fly_from_logo" />
					</LinearLayout>

					<LinearLayout
					    android:id="@+id/leftpage_fly_from_linearlayout"
					    android:layout_width="wrap_content"
					    android:layout_height="match_parent"
					    android:layout_weight="1"
					    android:orientation="vertical" >

						<LinearLayout
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
						    android:layout_weight="3"
						    android:orientation="horizontal" >

							<TextView
							    android:id="@+id/leftpage_fly_from_textView"
							    android:layout_width="90dp"
							    android:layout_height="wrap_content"
							    android:layout_gravity="bottom"
							    android:text="上海"
							    android:textColor="@color/white"
							    android:textSize="21sp"
							    android:typeface="serif" />

						</LinearLayout>

						<LinearLayout
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
						    android:layout_weight="1"
						    android:orientation="horizontal" >

							<TextView
							    android:id="@+id/leftpage_fly_from_code_textView"
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:layout_gravity="top"
							    android:layout_weight="1"
							    android:text="SHA"
							    android:textColor="@color/white"
							    android:textSize="13dp"
							    android:typeface="serif" />
						</LinearLayout>
					</LinearLayout>

					<LinearLayout
					    android:layout_width="wrap_content"
					    android:layout_height="match_parent"
					    android:layout_gravity="bottom"
					    android:layout_weight="1"
					    android:gravity="center_horizontal"
					    android:orientation="horizontal" >

						<ImageView
				    		    android:id="@+id/leftpage_swithcity_imageView"
				    		    android:layout_width="wrap_content"
				    		    android:layout_height="wrap_content"
				    		    android:layout_gravity="center_vertical"
				    		    android:layout_weight="1"
				    		    android:src="@drawable/leftpage_refresh" />
					</LinearLayout>
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_gravity="bottom"
						android:layout_weight="1"
						android:orientation="horizontal" >

						<ImageView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="center_vertical"
						    android:layout_marginLeft="3dp"
						    android:layout_marginRight="3dp"
						    android:layout_weight="1"
						    android:src="@drawable/fly_to_logo" />

					</LinearLayout>

					<LinearLayout
					    android:id="@+id/leftpage_fly_to_linearlayout"
					    android:layout_width="wrap_content"
					    android:layout_height="match_parent"
					    android:layout_gravity="bottom"
					    android:layout_weight="1"
					    android:orientation="vertical" >

						<LinearLayout
					    android:layout_width="wrap_content"
					    android:layout_height="match_parent"
					    android:layout_weight="1"
					    android:orientation="vertical" >

						<LinearLayout
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
						    android:layout_weight="3"
						    android:orientation="horizontal" >

							<TextView
							    android:id="@+id/leftpage_fly_to_textView"
							    android:layout_width="90dp"
							    android:layout_height="wrap_content"
							    android:layout_gravity="bottom"
							    android:text="北京"
							    android:textColor="@color/white"
							    android:textSize="21sp" />

						</LinearLayout>

						<LinearLayout
						    android:layout_width="match_parent"
						    android:layout_height="wrap_content"
						    android:layout_weight="1"
						    android:orientation="horizontal" >

							<TextView
							    android:id="@+id/leftpage_fly_to_code_textView"
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:layout_gravity="top"
							    android:text="PEK"
							    android:textColor="@color/white"
							    android:textSize="13dp" />

						</LinearLayout>
					</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<ImageView
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:layout_gravity="center_horizontal"
		    	    android:src="@drawable/leftpage_line" />

				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_weight="4"
				    android:orientation="horizontal" >

					<LinearLayout
					    android:id="@+id/leftpage_singleway_date_linearlayout"
					    android:layout_width="wrap_content"
					    android:layout_height="match_parent"
					    android:layout_marginRight="5dp"
					    android:layout_weight="1"
					    android:orientation="horizontal" >

						<ImageView
				    	    android:layout_width="wrap_content"
				    	    android:layout_height="wrap_content"
				    	    android:layout_gravity="center_vertical"
				    	    android:src="@drawable/calendar_logo_gray"
				    	    android:layout_weight="1" />
		
						<TextView
						    android:id="@+id/fly_from_date_textView"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="center_vertical"
						    android:layout_marginLeft="3dp"
						    android:layout_weight="4"
						    android:text="2013-12-04"
						    android:textColor="@color/white"
						    android:textSize="15sp"
						    android:typeface="serif" />

					</LinearLayout>

					<LinearLayout
					    android:id="@+id/leftpage_chooseway_divider"
					    android:layout_width="wrap_content"
					    android:layout_height="match_parent"
					    android:orientation="horizontal" >
						<ImageView
				    	    android:layout_width="wrap_content"
				    	    android:layout_height="wrap_content"
				    	    android:layout_gravity="center_vertical"
				    	    android:src="@drawable/leftpage_date_divider"/>
					</LinearLayout>

					<LinearLayout
					    android:id="@+id/leftpage_returnway_date_linearlayout"
					    android:layout_width="wrap_content"
					    android:layout_height="match_parent"
					    android:layout_marginLeft="10dp"
					    android:layout_weight="1"
					    android:orientation="horizontal" >

						<ImageView
				    	    android:layout_width="wrap_content"
				    	    android:layout_height="wrap_content"
				    	    android:layout_gravity="center_vertical"
				    	    android:src="@drawable/calendar_logo_gray"
				    	    android:layout_weight="1" />
		
						<TextView
						    android:id="@+id/fly_to_date_textView"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_gravity="center_vertical"
						    android:layout_marginLeft="3dp"
						    android:layout_weight="4"
						    android:text="2013-12-04"
						    android:textColor="@color/white"
						    android:textSize="15sp"
						    android:typeface="serif" />

					</LinearLayout>
					
		    	</LinearLayout>
				<ImageView
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:layout_gravity="center_horizontal"
		    	    android:src="@drawable/leftpage_line" />
				<LinearLayout
		    	    android:layout_width="match_parent"
		    	    android:layout_height="wrap_content"
		    	    android:layout_weight="2"
		    	    android:orientation="horizontal">
	
					<LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"
					    android:layout_weight="2"
					    android:orientation="vertical" >
	
						<TextView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_marginLeft="9dp"
						    android:layout_weight="1"
						    android:text="舱位选择"
						    android:textColor="@color/lightgray"
						    android:typeface="serif" />
	
						<LinearLayout
						    android:id="@+id/flight_class_selection_linearLayout"
				    	    android:layout_width="wrap_content"
				    	    android:layout_height="wrap_content"
				    	    android:orientation="horizontal"
				    	    android:layout_weight="2">
	
				    		<ImageView
				    		    android:layout_width="wrap_content"
				    		    android:layout_height="wrap_content"
				    		    android:layout_gravity="center_horizontal"
				    		    android:layout_marginLeft="9dp"
				    		    android:layout_marginTop="0dp"
				    		    android:layout_weight="1"
				    		    android:src="@drawable/fly_class_logo" />
	
	
							<TextView
							    android:id="@+id/flight_class_spinner_textView"
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:layout_gravity="center_horizontal"
							    android:text=" 经济舱"
							    android:textColor="@color/white"
							    android:layout_weight="1"
							    android:typeface="serif" />
	
				    	</LinearLayout>
			    	</LinearLayout>

			    	<LinearLayout
			    	    android:layout_width="match_parent"
			    	    android:layout_height="match_parent"
			    	    android:layout_weight="2"
			    	    android:orientation="vertical" >

						<TextView
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_marginLeft="9dp"
						    android:layout_weight="1"
						    android:text="乘客数量"
						    android:textColor="@color/lightgray"
						    android:typeface="serif" />
	
						<LinearLayout
				    	    android:layout_width="wrap_content"
				    	    android:layout_height="wrap_content"
				    	    android:orientation="horizontal"
				    	    android:layout_weight="2">
	
						    <LinearLayout
						        android:id="@+id/flight_passengar_adult_linearLayout"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:orientation="horizontal"
						        android:paddingRight="10dp" >

					    		<ImageView
					    		    android:layout_width="wrap_content"
					    		    android:layout_height="wrap_content"
					    		    android:layout_gravity="center_horizontal"
					    		    android:layout_marginLeft="9dp"
					    		    android:layout_weight="1"
					    		    android:src="@drawable/fly_passengar_logo" />
								<TextView
								    android:id="@+id/flight_passengar_adult_textView"
								    android:layout_width="wrap_content"
								    android:layout_height="wrap_content"
								    android:layout_weight="1"
								    android:text=" × 2"
								    android:textColor="@color/white"
								    android:layout_gravity="center_horizontal"
								    android:typeface="serif" />
							</LinearLayout>
							<ImageView
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:layout_gravity="center_horizontal"
							    android:layout_marginLeft="9dp"
							    android:layout_weight="1"
							    android:src="@drawable/vertical_divider_480_800" />

							<LinearLayout
							    android:id="@+id/flight_passengar_child_linearLayout"
							    android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:orientation="horizontal"
							    android:paddingLeft="10dp"
							    android:paddingRight="10dp" >

								<ImageView
								    android:layout_width="wrap_content"
								    android:layout_height="wrap_content"
								    android:layout_gravity="center_horizontal"
								    android:layout_marginLeft="9dp"
								    android:layout_weight="1"
								    android:src="@drawable/fly_child_logo" />
		
								<TextView
								    android:id="@+id/flight_passengar_child_textView"
								    android:layout_width="wrap_content"
								    android:layout_height="wrap_content"
								    android:layout_weight="1"
								    android:text=" × 1"
								    android:layout_gravity="center_horizontal"
								    android:textColor="@color/white"
								    android:typeface="serif" />
							</LinearLayout>
				    	</LinearLayout>
			    	</LinearLayout>
		    	</LinearLayout>

		    </LinearLayout>
	    </LinearLayout>
	    <!-- 
	    <LinearLayout
	         android:layout_width="fill_parent"
		   	 android:layout_height="wrap_content"
		     android:orientation="horizontal">
	        <LinearLayout  
		        android:layout_width="fill_parent"  
		        android:layout_height="wrap_content"  
		        android:gravity="right" >
			    <ImageView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/leftpage_mainpage_480_800" />
		    </LinearLayout>
	    </LinearLayout>
	     -->
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:orientation="vertical" >
	    <LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_gravity="right"
		    android:orientation="horizontal" >
	    	<ImageView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_gravity="top"
	    	    android:src="@drawable/leftpage_gotomainpage"
	    	    android:layout_weight="1" />
	    </LinearLayout>
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="14"
	    android:orientation="horizontal"
	    android:paddingLeft="25dp"
	    android:paddingRight="25dp" >

	    <LinearLayout
	        android:id="@+id/leftpage_voice_search_linearLayout"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:layout_weight="1"
	        android:background="@color/priceGray"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal" >

	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:src="@drawable/leftpage_voice_speak" />

	    </LinearLayout>

	    <LinearLayout
	        android:id="@+id/leftpage_flight_search_ticket_linearLayout"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:layout_weight="4"
	        android:background="@color/voicesearchBgGray"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal" >

	    	<ImageView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_gravity="center_vertical"
	    	    android:src="@drawable/leftpage_flight_search" />

			<TextView
			    android:layout_width="90dp"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:layout_marginLeft="10dp"
			    android:text="航班查询"
			    android:textColor="@color/flightSearchText"
			    android:textSize="21sp" />

	    </LinearLayout>
	</LinearLayout>
</LinearLayout>